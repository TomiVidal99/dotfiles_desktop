# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = i3bar
        colors = false
        interval = 1
}

#order += "ipv6"
#order += "wireless _first_"
order += "ethernet _first_"
#order += "battery all"
#order += "disk /"
#order += "load"
order += "memory"
order += "volume master"
order += "tztime local_date"
order += "tztime local_time"

wireless _first_ {
        #format_up = "📡 %essid <%quality><%ip>"
        format_up = "泌 %essid <%quality><%ip>"
        format_down = " N/WLAN"
}

ethernet _first_ {
        #format_up = "🌐 <%ip><%speed>"
        format_up = "  <%ip><%speed>"
        #format_down = "N/C"
        format_down = " N/C"
}

battery all {
        format = "%status %percentage %remaining"
}

disk "/" {
        format = "%avail"
}

load {
        format = "CPU: %1min%"
}

memory {
        #format = "🧠 %used/%total"
        format = " %used/%total"
        threshold_degraded = "600mb"
        format_degraded = "%used/%total"
}

tztime local_date {
        #format = "📅 %A %d/%m/%Y"
        format = "  %A %d/%m/%Y"
}

tztime local_time {
        #format = "🕔 %H:%M   "
        format = " %H:%M   "
}

volume master {
        #format = "🔊%volume"
        format = "墳 %volume"
        #format_muted = "🔈: muted (%volume)"
        format_muted = "ﱝ  MUTED (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
